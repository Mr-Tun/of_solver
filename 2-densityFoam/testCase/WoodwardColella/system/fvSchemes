FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    div(phi,rho)   Gauss vanAlbada;
    div(phi,rhoU)  Gauss vanAlbada;
    div(phi,rhoE)  Gauss vanAlbada;
    div(phi,p)     Gauss vanAlbada;
}

laplacianSchemes
{
}

interpolationSchemes
{
    reconstruct(var) vanLeer;
    reconstruct(rho)  vanLeer;
    reconstruct(U)  vanLeer;
    reconstruct(T) vanLeer;

    flux(rhoU)      linear;
    dotInterpolate(Sf,tauMC) linear;
    interpolate(muEff) linear;
    
    interpolate(rho) linear;
    interpolate(rhoU) linear;
    interpolate(U) linear;  
}

snGradSchemes
{
    default         uncorrected;
}


