FoamFile
{
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue T 0
);

regions
(
    // Setting values inside a sphere
    sphereToCell
    {
        centre  (0.5 0.75 0);
        radius  0.15;
        fieldValues
        (
            volScalarFieldValue T 1
        );
    }
);


