FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;
    div(phi,T)      Gauss vanLeer;
    div((interpolate(U)&Sf),T) Gauss linear; 
    div(U)          Gauss linear; 
    div((U*T))       Gauss vanLeer;
    div(((interpolate((1-T))*interpolate(mag(U)))*(interpolate((grad(T)|(mag(grad(T))+deltaN)))&Sf)),T) Gauss vanLeer;
           
}

laplacianSchemes
{
    default         none;
}

interpolationSchemes
{
    interpolate(U) linear;
    interpolate(T) linear;
    interpolate((1-T)) linear;
    interpolate(mag(U)) linear;
    flux(U)         linear;
    interpolate((grad(T)|(mag(grad(T))+deltaN)))  linear;
    //beta            downwind phiGammaN;
    beta            linear;
}

// ************************************************************************* //
